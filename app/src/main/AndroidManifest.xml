<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/tuner_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tuner_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlyphTuner">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GlyphTuner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.jamjar.glyphtuner.GuitarTuner"
            android:permission="com.nothing.glyph.permission.BIND_GLYPH_TOY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY"/>
            </intent-filter>

            <meta-data android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name"/>
            <meta-data android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/guitar_tuner_icon"/>
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/tuner_desc" />
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1"/>
        </service>

        <service
            android:name="com.jamjar.glyphtuner.TunerForegroundService"
            android:foregroundServiceType="microphone"
            android:exported="false" />

    </application>

</manifest>